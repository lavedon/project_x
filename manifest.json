{
    "manifest_version": 2,
    "name" : "Project X Prototype",
    "version" : "0.1",
    "description" : "Project X prototype.  Scrape from Facebook Groups.",
    "commands": {
        "scrape-profile": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"

            },
            "description": "Scrape the results."
        }
    },

    "content_scripts" : [
        {
            "matches": ["https://facebook.com/groups/*/members/"],
            "js": ["content.js"],
            "run_at" : "document_end"
        }
    ],
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : true
    },
    "permissions" : [
        "declarativeContent", 
        "activeTab", 
        "contextMenus", 
        "notifications",
        "tabs",
        "https://script.google.com/macros/s/"
    ],
    "icons": { "16": "16.png",
               "48": "48.png",
               "128": "128.png" },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
